<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LetterInboxFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvReceivedLetter"
            android:visibility="visible"
            android:nestedScrollingEnabled="true"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <com.application.smartstation.view.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_letter_found"
            android:id="@+id/txtNoFound"
            android:textSize="30sp"
            android:visibility="gone"
            android:textColor="@color/colorE"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            >

        </com.application.smartstation.view.CustomTextViewBold>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>